// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  name       String
  email      String       @unique
  password   String
  Interested Interested[]
}

model Interested {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [userId], references: [id])
  userId  Int
  movie   Movie  @relation(fields: [movieId], references: [id])
  movieId String
}

model Movie {
  id         String       @id
  title      String
  plot       String
  poster     String
  backdrop   String
  rating     Int
  release    DateTime
  duration   Int
  category   Category[]
  Interested Interested[]
}

model Category {
  id     Int     @id
  title  String
  movies Movie[]
}
